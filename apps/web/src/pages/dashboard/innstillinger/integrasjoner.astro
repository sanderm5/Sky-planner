---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import { requireAuth, isAuthError } from '../../../middleware/auth';
import * as db from '@skyplanner/database';

// Initialize Supabase client
db.getSupabaseClient({
  supabaseUrl: import.meta.env.SUPABASE_URL,
  supabaseKey: import.meta.env.SUPABASE_SERVICE_KEY || import.meta.env.SUPABASE_ANON_KEY,
});

// Auth check
const authResult = await requireAuth(Astro);
if (isAuthError(authResult)) return authResult;

const { user, organization } = authResult;

// Integrasjoner er kun tilgjengelig for full mode (TRE Allservice)
if ((organization as any).app_mode !== 'full') {
  return Astro.redirect('/dashboard/innstillinger');
}

// API base URL - use proxy in dev to avoid CORS issues
const apiBaseUrl = import.meta.env.PROD ? (import.meta.env.APP_API_URL || 'https://app.skyplanner.no') : '';
---

<DashboardLayout
  title="Integrasjoner"
  user={user}
  organization={organization}
  currentPath="/dashboard/innstillinger"
>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Innstillinger</h1>
    <p class="text-dark-400">Administrer organisasjonsinnstillinger og integrasjoner.</p>
  </div>

  <!-- Settings Navigation -->
  <div class="mb-8 flex flex-wrap gap-2">
    <a href="/dashboard/innstillinger" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Generelt
    </a>
    <a href="/dashboard/innstillinger/integrasjoner" class="px-4 py-2 rounded-xl bg-primary-500/10 text-primary-400 border border-primary-500/20 font-medium text-sm">
      Integrasjoner
    </a>
    <a href="/dashboard/innstillinger/api-nokler" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      API-nøkler
    </a>
    <a href="/dashboard/innstillinger/webhooks" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Webhooks
    </a>
    <a href="/dashboard/innstillinger/sikkerhet" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Sikkerhet
    </a>
    <a href="/dashboard/innstillinger/personvern" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Personvern
    </a>
  </div>

  <div class="mb-6">
    <h2 class="text-lg font-semibold text-white mb-2">Regnskapsintegrasjoner</h2>
    <p class="text-dark-400 text-sm">Koble SkyPlanner til ditt regnskapssystem for automatisk synkronisering av kunder.</p>
  </div>

  <!-- Integration Cards -->
  <div id="integrations-container" class="space-y-6">
    <div class="glass-card p-8 text-center">
      <svg class="w-8 h-8 text-primary-400 animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-dark-400">Laster integrasjoner...</p>
    </div>
  </div>

  <!-- Connect Modal: Tripletex -->
  <div id="modal-tripletex" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="overlay-tripletex"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-md p-6 relative">
        <button id="close-tripletex" class="absolute top-4 right-4 text-dark-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <h2 class="text-xl font-bold text-white mb-2">Koble til Tripletex</h2>
        <p class="text-dark-400 text-sm mb-6">
          Du finner Consumer Token og Employee Token i Tripletex under Innstillinger &rarr; API-tilgang.
        </p>

        <form id="form-tripletex" class="space-y-4">
          <div>
            <label class="input-label" for="tripletex-consumer">Consumer Token *</label>
            <input
              type="text"
              id="tripletex-consumer"
              name="apiKey"
              class="input w-full"
              placeholder="abc123..."
              required
            />
          </div>

          <div>
            <label class="input-label" for="tripletex-employee">Employee Token *</label>
            <input
              type="text"
              id="tripletex-employee"
              name="employeeToken"
              class="input w-full"
              placeholder="xyz789..."
              required
            />
          </div>

          <div id="tripletex-error" class="text-red-400 text-sm hidden"></div>

          <div class="flex gap-3 pt-2">
            <button type="button" id="cancel-tripletex" class="btn-secondary flex-1">Avbryt</button>
            <button type="submit" id="submit-tripletex" class="btn-primary flex-1">Koble til</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Connect Modal: Fiken -->
  <div id="modal-fiken" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="overlay-fiken"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-md p-6 relative">
        <button id="close-fiken" class="absolute top-4 right-4 text-dark-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <h2 class="text-xl font-bold text-white mb-2">Koble til Fiken</h2>
        <p class="text-dark-400 text-sm mb-6">
          Du finner API-nøkkel i Fiken under Innstillinger &rarr; Integrasjoner &rarr; API-nøkler.
        </p>

        <form id="form-fiken" class="space-y-4">
          <div>
            <label class="input-label" for="fiken-apikey">API-nøkkel *</label>
            <input
              type="text"
              id="fiken-apikey"
              name="apiKey"
              class="input w-full"
              placeholder="Bearer eyJ..."
              required
            />
          </div>

          <div id="fiken-error" class="text-red-400 text-sm hidden"></div>

          <div class="flex gap-3 pt-2">
            <button type="button" id="cancel-fiken" class="btn-secondary flex-1">Avbryt</button>
            <button type="submit" id="submit-fiken" class="btn-primary flex-1">Koble til</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sync Modal -->
  <div id="modal-sync" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="overlay-sync"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-md p-6 relative">
        <button id="close-sync" class="absolute top-4 right-4 text-dark-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <div id="sync-loading" class="text-center">
          <svg class="w-12 h-12 text-primary-400 animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <h2 class="text-xl font-bold text-white mb-2">Synkroniserer...</h2>
          <p class="text-dark-400 text-sm">Henter kunder fra regnskapssystemet</p>
        </div>

        <div id="sync-result" class="hidden">
          <div class="text-center mb-6">
            <div class="w-16 h-16 rounded-full bg-green-500/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-white mb-2">Synkronisering fullfort</h2>
          </div>

          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-dark-800/50 rounded-lg p-4 text-center">
              <div id="sync-created" class="text-2xl font-bold text-green-400">0</div>
              <div class="text-sm text-dark-400">Nye kunder</div>
            </div>
            <div class="bg-dark-800/50 rounded-lg p-4 text-center">
              <div id="sync-updated" class="text-2xl font-bold text-blue-400">0</div>
              <div class="text-sm text-dark-400">Oppdatert</div>
            </div>
            <div class="bg-dark-800/50 rounded-lg p-4 text-center">
              <div id="sync-unchanged" class="text-2xl font-bold text-dark-300">0</div>
              <div class="text-sm text-dark-400">Uendret</div>
            </div>
            <div class="bg-dark-800/50 rounded-lg p-4 text-center">
              <div id="sync-failed" class="text-2xl font-bold text-red-400">0</div>
              <div class="text-sm text-dark-400">Feilet</div>
            </div>
          </div>

          <button id="sync-close" class="btn-primary w-full">Lukk</button>
        </div>

        <div id="sync-error" class="hidden text-center">
          <div class="w-16 h-16 rounded-full bg-red-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">Synkronisering feilet</h2>
          <p id="sync-error-message" class="text-dark-400 text-sm mb-6"></p>
          <button id="sync-error-close" class="btn-secondary w-full">Lukk</button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script define:vars={{ apiBaseUrl }}>
  // State
  let integrations = [];
  let currentIntegration = null;

  // DOM elements
  const container = document.getElementById('integrations-container');

  // Modal helpers
  function showModal(id) {
    const modal = document.getElementById(`modal-${id}`);
    modal?.classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
  }

  function hideModal(id) {
    const modal = document.getElementById(`modal-${id}`);
    modal?.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }

  // Setup modal close handlers
  ['tripletex', 'fiken', 'sync'].forEach(id => {
    document.getElementById(`close-${id}`)?.addEventListener('click', () => hideModal(id));
    document.getElementById(`cancel-${id}`)?.addEventListener('click', () => hideModal(id));
    document.getElementById(`overlay-${id}`)?.addEventListener('click', () => hideModal(id));
  });

  document.getElementById('sync-close')?.addEventListener('click', () => hideModal('sync'));
  document.getElementById('sync-error-close')?.addEventListener('click', () => hideModal('sync'));

  // Render integration cards
  function renderIntegrations() {
    if (!container) return;

    if (integrations.length === 0) {
      container.innerHTML = `
        <div class="glass-card p-8 text-center">
          <div class="w-16 h-16 rounded-full bg-dark-700/50 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Ingen integrasjoner tilgjengelig</h3>
          <p class="text-dark-400">Kontakt support for å aktivere integrasjoner.</p>
        </div>
      `;
      return;
    }

    container.innerHTML = integrations.map(integration => {
      const iconMap = {
        'fa-calculator': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>`,
        'fa-cloud': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/></svg>`,
        'fa-receipt': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>`,
      };

      const icon = iconMap[integration.icon] || iconMap['fa-cloud'];

      return `
        <div class="glass-card p-6">
          <div class="flex items-start justify-between">
            <div class="flex items-start gap-4">
              <div class="w-14 h-14 rounded-xl bg-dark-700/50 flex items-center justify-center text-primary-400 flex-shrink-0">
                ${icon}
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-1">${integration.name}</h3>
                <p class="text-dark-400 text-sm mb-3">${integration.description}</p>
                ${integration.isConnected ? `
                  <div class="flex items-center gap-4">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400">
                      <span class="w-1.5 h-1.5 rounded-full bg-green-400 mr-1.5"></span>
                      Tilkoblet
                    </span>
                    ${integration.lastSyncAt ? `
                      <span class="text-xs text-dark-400">
                        Sist synkronisert: ${new Date(integration.lastSyncAt).toLocaleDateString('nb-NO', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' })}
                      </span>
                    ` : ''}
                  </div>
                ` : `
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-dark-600/50 text-dark-400">
                    Ikke tilkoblet
                  </span>
                `}
              </div>
            </div>
            <div class="flex gap-2">
              ${integration.isConnected ? `
                <button
                  class="btn-secondary text-sm"
                  data-action="sync"
                  data-id="${integration.id}"
                >
                  Synkroniser
                </button>
                <button
                  class="btn-ghost text-sm text-red-400 hover:text-red-300"
                  data-action="disconnect"
                  data-id="${integration.id}"
                >
                  Koble fra
                </button>
              ` : `
                <button
                  class="btn-primary text-sm"
                  data-action="connect"
                  data-id="${integration.id}"
                  data-auth="${integration.authType}"
                >
                  Koble til
                </button>
              `}
            </div>
          </div>
        </div>
      `;
    }).join('');

    // Add event listeners
    container.querySelectorAll('[data-action]').forEach(btn => {
      btn.addEventListener('click', handleAction);
    });
  }

  // Handle button actions
  async function handleAction(e) {
    const action = e.target.dataset.action;
    const id = e.target.dataset.id;
    const authType = e.target.dataset.auth;

    currentIntegration = id;

    switch (action) {
      case 'connect':
        if (authType === 'oauth2') {
          // Start OAuth flow
          try {
            const redirectUri = `${window.location.origin}/dashboard/innstillinger/oauth-callback`;
            const res = await fetch(`${apiBaseUrl}/api/app/integrations/${id}/oauth/authorize?redirectUri=${encodeURIComponent(redirectUri)}`, {
              credentials: 'include',
            });
            const data = await res.json();
            if (data.success) {
              // Store state for verification
              sessionStorage.setItem('oauth_state', data.data.state);
              // Redirect to OAuth provider
              window.location.href = data.data.authorizationUrl;
            }
          } catch (err) {
            alert('Kunne ikke starte tilkobling. Prøv igjen.');
          }
        } else {
          // Show connect modal for API key auth
          showModal(id);
        }
        break;

      case 'sync':
        await runSync(id);
        break;

      case 'disconnect':
        if (confirm('Er du sikker på at du vil koble fra denne integrasjonen?')) {
          await disconnectIntegration(id);
        }
        break;
    }
  }

  // Connect with credentials
  async function connectWithCredentials(id, credentials) {
    try {
      const res = await fetch(`${apiBaseUrl}/api/app/integrations/${id}/connect`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(credentials),
      });

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.error?.message || data.message || 'Tilkobling feilet');
      }

      hideModal(id);
      await loadIntegrations();

      // Offer to sync immediately
      if (confirm('Tilkobling vellykket! Vil du synkronisere kunder nå?')) {
        await runSync(id);
      }
    } catch (err) {
      const errorEl = document.getElementById(`${id}-error`);
      if (errorEl) {
        errorEl.textContent = err.message;
        errorEl.classList.remove('hidden');
      }
    }
  }

  // Run sync
  async function runSync(id) {
    showModal('sync');

    const loadingEl = document.getElementById('sync-loading');
    const resultEl = document.getElementById('sync-result');
    const errorEl = document.getElementById('sync-error');

    loadingEl?.classList.remove('hidden');
    resultEl?.classList.add('hidden');
    errorEl?.classList.add('hidden');

    try {
      const res = await fetch(`${apiBaseUrl}/api/app/integrations/${id}/sync`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ fullSync: false }),
      });

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.error?.message || data.message || 'Synkronisering feilet');
      }

      // Show results
      loadingEl?.classList.add('hidden');
      resultEl?.classList.remove('hidden');

      document.getElementById('sync-created').textContent = data.data.created;
      document.getElementById('sync-updated').textContent = data.data.updated;
      document.getElementById('sync-unchanged').textContent = data.data.unchanged;
      document.getElementById('sync-failed').textContent = data.data.failed;

      // Reload integrations to update last sync time
      await loadIntegrations();
    } catch (err) {
      loadingEl?.classList.add('hidden');
      errorEl?.classList.remove('hidden');
      document.getElementById('sync-error-message').textContent = err.message;
    }
  }

  // Disconnect integration
  async function disconnectIntegration(id) {
    try {
      const res = await fetch(`${apiBaseUrl}/api/app/integrations/${id}/disconnect`, {
        method: 'DELETE',
        credentials: 'include',
      });

      if (!res.ok) {
        throw new Error('Kunne ikke koble fra');
      }

      await loadIntegrations();
    } catch (err) {
      alert(err.message);
    }
  }

  // Load integrations from API
  async function loadIntegrations() {
    try {
      const res = await fetch(`${apiBaseUrl}/api/app/integrations`, {
        credentials: 'include',
      });

      const data = await res.json();

      if (data.success) {
        integrations = data.data;
        renderIntegrations();
      }
    } catch (err) {
      container.innerHTML = `
        <div class="glass-card p-8 text-center border border-red-500/30">
          <div class="w-16 h-16 rounded-full bg-red-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Kunne ikke laste integrasjoner</h3>
          <p class="text-dark-400 mb-4">Sjekk at du er logget inn og prøv igjen.</p>
          <button onclick="window.location.reload()" class="btn-secondary">Last inn på nytt</button>
        </div>
      `;
    }
  }

  // Form submissions
  document.getElementById('form-tripletex')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    await connectWithCredentials('tripletex', {
      apiKey: formData.get('apiKey'),
      metadata: {
        employeeToken: formData.get('employeeToken'),
      },
    });
  });

  document.getElementById('form-fiken')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    await connectWithCredentials('fiken', {
      apiKey: formData.get('apiKey'),
    });
  });

  // Initial load
  loadIntegrations();
</script>
