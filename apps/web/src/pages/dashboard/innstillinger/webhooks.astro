---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import { requireAuth, isAuthError } from '../../../middleware/auth';
import * as db from '@skyplanner/database';

// Initialize Supabase client
db.getSupabaseClient({
  supabaseUrl: import.meta.env.SUPABASE_URL,
  supabaseKey: import.meta.env.SUPABASE_SERVICE_KEY || import.meta.env.SUPABASE_ANON_KEY,
});

// Auth check
const authResult = await requireAuth(Astro);
if (isAuthError(authResult)) return authResult;

const { user, organization, payload } = authResult;

// Webhooks er kun tilgjengelig for full mode (TRE Allservice)
if ((organization as any).app_mode !== 'full') {
  return Astro.redirect('/dashboard/innstillinger');
}

// Check if user is admin (bruker type = admin, klient type = regular user)
const isAdmin = payload.type === 'bruker';

// API base URL - use proxy in dev to avoid CORS issues
const apiBaseUrl = import.meta.env.PROD ? (import.meta.env.APP_API_URL || 'https://app.skyplanner.no') : '';

// Available event types
const eventTypes = [
  { id: 'customer.created', label: 'Kunde opprettet', category: 'Kunder' },
  { id: 'customer.updated', label: 'Kunde oppdatert', category: 'Kunder' },
  { id: 'customer.deleted', label: 'Kunde slettet', category: 'Kunder' },
  { id: 'route.created', label: 'Rute opprettet', category: 'Ruter' },
  { id: 'route.completed', label: 'Rute fullfort', category: 'Ruter' },
  { id: 'appointment.created', label: 'Avtale opprettet', category: 'Avtaler' },
  { id: 'appointment.completed', label: 'Avtale fullfort', category: 'Avtaler' },
  { id: 'sync.completed', label: 'Synkronisering fullfort', category: 'Integrasjoner' },
  { id: 'sync.failed', label: 'Synkronisering feilet', category: 'Integrasjoner' },
];

// Group by category
const eventsByCategory = eventTypes.reduce((acc: Record<string, typeof eventTypes>, event) => {
  if (!acc[event.category]) acc[event.category] = [];
  acc[event.category].push(event);
  return acc;
}, {} as Record<string, typeof eventTypes>);
---

<DashboardLayout
  title="Webhooks"
  user={user}
  organization={organization}
  currentPath="/dashboard/innstillinger"
>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Innstillinger</h1>
    <p class="text-dark-400">Administrer organisasjonsinnstillinger og integrasjoner.</p>
  </div>

  <!-- Settings Navigation -->
  <div class="mb-8 flex flex-wrap gap-2">
    <a href="/dashboard/innstillinger" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Generelt
    </a>
    <a href="/dashboard/innstillinger/integrasjoner" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Integrasjoner
    </a>
    <a href="/dashboard/innstillinger/api-nokler" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      API-nøkler
    </a>
    <a href="/dashboard/innstillinger/webhooks" class="px-4 py-2 rounded-xl bg-primary-500/10 text-primary-400 border border-primary-500/20 font-medium text-sm">
      Webhooks
    </a>
    <a href="/dashboard/innstillinger/sikkerhet" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Sikkerhet
    </a>
    <a href="/dashboard/innstillinger/personvern" class="px-4 py-2 rounded-xl bg-dark-800/50 text-dark-300 border border-dark-700 hover:bg-dark-700/50 hover:text-white transition-colors font-medium text-sm">
      Personvern
    </a>
  </div>

  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="text-lg font-semibold text-white mb-1">Webhooks</h2>
      <p class="text-dark-400 text-sm">Motta varsler når hendelser skjer i SkyPlanner.</p>
    </div>
    {isAdmin && (
      <button id="btn-create" class="btn-primary">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Ny webhook
      </button>
    )}
  </div>

  <!-- Info box -->
  <div class="glass-card p-6 mb-6">
    <div class="flex items-start gap-4">
      <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-white mb-1">Slik fungerer webhooks</h3>
        <p class="text-dark-400 text-sm mb-2">
          Webhooks sender HTTP POST-foresporsler til din URL nar valgte hendelser skjer.
          Alle foresporsler inkluderer en HMAC-SHA256 signatur for verifisering.
        </p>
        <a href="/api/docs/webhook-signature" target="_blank" class="text-primary-400 text-sm hover:underline">
          Les om signaturverifisering &rarr;
        </a>
      </div>
    </div>
  </div>

  <!-- Webhooks List -->
  <div id="webhooks-container" class="space-y-4">
    <div class="glass-card p-8 text-center">
      <svg class="w-8 h-8 text-primary-400 animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-dark-400">Laster webhooks...</p>
    </div>
  </div>

  <!-- Create Modal -->
  <div id="modal-create" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="overlay-create"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-lg p-6 relative max-h-[90vh] overflow-y-auto">
        <button id="close-create" class="absolute top-4 right-4 text-dark-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <h2 class="text-xl font-bold text-white mb-6">Opprett ny webhook</h2>

        <form id="form-create" class="space-y-6">
          <div>
            <label class="input-label" for="webhook-name">Navn *</label>
            <input
              type="text"
              id="webhook-name"
              name="name"
              class="input w-full"
              placeholder="F.eks. CRM-oppdatering"
              required
            />
          </div>

          <div>
            <label class="input-label" for="webhook-url">URL *</label>
            <input
              type="url"
              id="webhook-url"
              name="url"
              class="input w-full"
              placeholder="https://example.com/webhook"
              required
            />
            <p class="text-xs text-dark-400 mt-1">Må være en HTTPS URL</p>
          </div>

          <div>
            <label class="input-label" for="webhook-description">Beskrivelse</label>
            <input
              type="text"
              id="webhook-description"
              name="description"
              class="input w-full"
              placeholder="Valgfri beskrivelse"
            />
          </div>

          <div>
            <label class="input-label">Hendelser *</label>
            <p class="text-xs text-dark-400 mb-3">Velg hvilke hendelser som skal trigge denne webhooken.</p>
            <div class="space-y-4">
              {Object.entries(eventsByCategory).map(([category, events]) => (
                <div>
                  <h4 class="text-sm font-medium text-dark-300 mb-2">{category}</h4>
                  <div class="space-y-2">
                    {events.map(event => (
                      <label class="flex items-center gap-3 p-3 rounded-lg bg-dark-800/50 hover:bg-dark-800 cursor-pointer transition-colors">
                        <input
                          type="checkbox"
                          name="events"
                          value={event.id}
                          class="rounded bg-dark-700 border-dark-600 text-primary-500 focus:ring-primary-500"
                        />
                        <span class="text-white text-sm">{event.label}</span>
                      </label>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div id="create-error" class="text-red-400 text-sm hidden"></div>

          <div class="flex gap-3">
            <button type="button" id="cancel-create" class="btn-secondary flex-1">Avbryt</button>
            <button type="submit" id="submit-create" class="btn-primary flex-1">Opprett</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Webhook Created Modal -->
  <div id="modal-webhook-created" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-lg p-6 relative">
        <div class="text-center mb-6">
          <div class="w-16 h-16 rounded-full bg-green-500/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">Webhook opprettet!</h2>
          <p class="text-dark-400 text-sm">Kopier secret na - den vises kun en gang.</p>
        </div>

        <div class="bg-dark-800/50 rounded-lg p-4 mb-6">
          <label class="text-xs text-dark-400 block mb-2">Webhook Secret</label>
          <div class="flex items-center gap-2">
            <code id="new-webhook-secret" class="flex-1 text-primary-400 font-mono text-sm break-all"></code>
            <button id="copy-secret" class="btn-secondary p-2" title="Kopier">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
            </button>
          </div>
        </div>

        <div class="bg-yellow-500/10 border border-yellow-500/30 rounded-lg p-4 mb-6">
          <p class="text-sm text-dark-300">
            Bruk denne secret-verdien til å verifisere signaturen på innkommende webhooks.
            <a href="/api/docs/webhook-signature" target="_blank" class="text-primary-400 hover:underline">Les mer</a>
          </p>
        </div>

        <button id="close-webhook-created" class="btn-primary w-full">Jeg har lagret secret</button>
      </div>
    </div>
  </div>

  <!-- Deliveries Modal -->
  <div id="modal-deliveries" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" id="overlay-deliveries"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass-card w-full max-w-2xl p-6 relative max-h-[80vh] overflow-y-auto">
        <button id="close-deliveries" class="absolute top-4 right-4 text-dark-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <h2 class="text-xl font-bold text-white mb-6">Leveringshistorikk</h2>

        <div id="deliveries-content">
          <div class="text-center py-8">
            <svg class="w-8 h-8 text-primary-400 animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

<script define:vars={{ apiBaseUrl, isAdmin }}>
  // State
  let webhooks = [];

  // DOM elements
  const container = document.getElementById('webhooks-container');
  const createBtn = document.getElementById('btn-create');
  const createModal = document.getElementById('modal-create');
  const webhookCreatedModal = document.getElementById('modal-webhook-created');
  const deliveriesModal = document.getElementById('modal-deliveries');

  // Modal helpers
  function showModal(modal) {
    modal?.classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
  }

  function hideModal(modal) {
    modal?.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }

  // Setup modal handlers
  document.getElementById('close-create')?.addEventListener('click', () => hideModal(createModal));
  document.getElementById('cancel-create')?.addEventListener('click', () => hideModal(createModal));
  document.getElementById('overlay-create')?.addEventListener('click', () => hideModal(createModal));
  document.getElementById('close-webhook-created')?.addEventListener('click', () => {
    hideModal(webhookCreatedModal);
    loadWebhooks();
  });
  document.getElementById('close-deliveries')?.addEventListener('click', () => hideModal(deliveriesModal));
  document.getElementById('overlay-deliveries')?.addEventListener('click', () => hideModal(deliveriesModal));

  createBtn?.addEventListener('click', () => showModal(createModal));

  // Copy secret
  document.getElementById('copy-secret')?.addEventListener('click', async () => {
    const secret = document.getElementById('new-webhook-secret')?.textContent;
    if (secret) {
      await navigator.clipboard.writeText(secret);
      const btn = document.getElementById('copy-secret');
      btn.innerHTML = `<svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>`;
      setTimeout(() => {
        btn.innerHTML = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>`;
      }, 2000);
    }
  });

  // Render webhooks
  function renderWebhooks() {
    if (!container) return;

    if (webhooks.length === 0) {
      container.innerHTML = `
        <div class="glass-card p-8 text-center">
          <div class="w-16 h-16 rounded-full bg-dark-700/50 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Ingen webhooks</h3>
          <p class="text-dark-400 mb-4">Du har ikke opprettet noen webhooks ennå.</p>
          ${isAdmin ? '<button id="empty-create" class="btn-primary">Opprett første webhook</button>' : ''}
        </div>
      `;

      document.getElementById('empty-create')?.addEventListener('click', () => showModal(createModal));
      return;
    }

    container.innerHTML = webhooks.map(webhook => `
      <div class="glass-card p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="text-lg font-semibold text-white">${webhook.name}</h3>
              ${webhook.is_active
                ? '<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400">Aktiv</span>'
                : '<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-500/10 text-red-400">Deaktivert</span>'
              }
              ${webhook.failure_count > 0
                ? `<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-500/10 text-yellow-400">${webhook.failure_count} feil</span>`
                : ''
              }
            </div>
            <p class="text-dark-400 text-sm mb-2 font-mono">${webhook.url}</p>
            ${webhook.description ? `<p class="text-dark-400 text-sm mb-3">${webhook.description}</p>` : ''}
          </div>
          <div class="flex gap-2">
            <button
              class="btn-ghost text-sm"
              data-action="deliveries"
              data-id="${webhook.id}"
            >
              Historikk
            </button>
            ${isAdmin ? `
              <button
                class="btn-ghost text-sm text-red-400 hover:text-red-300"
                data-action="delete"
                data-id="${webhook.id}"
                data-name="${webhook.name}"
              >
                Slett
              </button>
            ` : ''}
          </div>
        </div>
        <div class="flex flex-wrap gap-2">
          ${webhook.events.map(event => `
            <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-dark-700/50 text-dark-300">
              ${event}
            </span>
          `).join('')}
        </div>
        ${webhook.last_success_at || webhook.last_failure_at ? `
          <div class="flex items-center gap-4 mt-4 text-xs text-dark-400">
            ${webhook.last_success_at ? `<span>Sist levert: ${new Date(webhook.last_success_at).toLocaleString('nb-NO')}</span>` : ''}
            ${webhook.last_failure_at ? `<span class="text-red-400">Sist feilet: ${new Date(webhook.last_failure_at).toLocaleString('nb-NO')}</span>` : ''}
          </div>
        ` : ''}
      </div>
    `).join('');

    // Add event listeners
    container.querySelectorAll('[data-action]').forEach(btn => {
      btn.addEventListener('click', handleAction);
    });
  }

  // Handle button actions
  async function handleAction(e) {
    const action = e.target.dataset.action;
    const id = e.target.dataset.id;

    switch (action) {
      case 'deliveries':
        await showDeliveries(id);
        break;
      case 'delete':
        const name = e.target.dataset.name;
        if (confirm(`Er du sikker på at du vil slette "${name}"?`)) {
          await deleteWebhook(id);
        }
        break;
    }
  }

  // Show deliveries
  async function showDeliveries(id) {
    showModal(deliveriesModal);

    const content = document.getElementById('deliveries-content');
    content.innerHTML = `
      <div class="text-center py-8">
        <svg class="w-8 h-8 text-primary-400 animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    `;

    try {
      const res = await fetch(`${apiBaseUrl}/api/app/webhooks/${id}/deliveries?limit=20`, {
        credentials: 'include',
      });

      const data = await res.json();

      if (!data.success || data.data.length === 0) {
        content.innerHTML = `
          <div class="text-center py-8">
            <p class="text-dark-400">Ingen leveringer ennå.</p>
          </div>
        `;
        return;
      }

      content.innerHTML = `
        <div class="space-y-3">
          ${data.data.map(d => `
            <div class="bg-dark-800/50 rounded-lg p-4">
              <div class="flex items-center justify-between mb-2">
                <span class="font-medium text-white">${d.event_type}</span>
                <span class="text-xs ${d.status === 'delivered' ? 'text-green-400' : d.status === 'failed' ? 'text-red-400' : 'text-yellow-400'}">
                  ${d.status === 'delivered' ? 'Levert' : d.status === 'failed' ? 'Feilet' : d.status === 'pending' ? 'Venter' : 'Forsøker på nytt'}
                </span>
              </div>
              <div class="flex items-center gap-4 text-xs text-dark-400">
                <span>${new Date(d.created_at).toLocaleString('nb-NO')}</span>
                ${d.response_status ? `<span>Status: ${d.response_status}</span>` : ''}
                ${d.response_time_ms ? `<span>${d.response_time_ms}ms</span>` : ''}
                ${d.attempt_count > 1 ? `<span>Forsok: ${d.attempt_count}</span>` : ''}
              </div>
              ${d.error_message ? `<p class="text-red-400 text-xs mt-2">${d.error_message}</p>` : ''}
            </div>
          `).join('')}
        </div>
      `;
    } catch (err) {
      content.innerHTML = `
        <div class="text-center py-8">
          <p class="text-red-400">Kunne ikke laste historikk</p>
        </div>
      `;
    }
  }

  // Load webhooks
  async function loadWebhooks() {
    try {
      const res = await fetch(`${apiBaseUrl}/api/app/webhooks`, {
        credentials: 'include',
      });

      const data = await res.json();

      if (data.success) {
        webhooks = data.data;
        renderWebhooks();
      }
    } catch (err) {
      container.innerHTML = `
        <div class="glass-card p-8 text-center border border-red-500/30">
          <h3 class="text-lg font-semibold text-white mb-2">Kunne ikke laste webhooks</h3>
          <p class="text-dark-400 mb-4">Prøv å laste siden på nytt.</p>
          <button onclick="window.location.reload()" class="btn-secondary">Last inn på nytt</button>
        </div>
      `;
    }
  }

  // Create webhook
  document.getElementById('form-create')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);
    const events = formData.getAll('events');

    if (events.length === 0) {
      document.getElementById('create-error').textContent = 'Velg minst en hendelse';
      document.getElementById('create-error').classList.remove('hidden');
      return;
    }

    const submitBtn = document.getElementById('submit-create');
    submitBtn?.setAttribute('disabled', 'true');

    try {
      const res = await fetch(`${apiBaseUrl}/api/app/webhooks`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          name: formData.get('name'),
          url: formData.get('url'),
          description: formData.get('description') || undefined,
          events,
        }),
      });

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.error?.message || data.message || 'Kunne ikke opprette webhook');
      }

      hideModal(createModal);
      form.reset();

      // Show the secret
      document.getElementById('new-webhook-secret').textContent = data.data.secret;
      showModal(webhookCreatedModal);

    } catch (err) {
      document.getElementById('create-error').textContent = err.message;
      document.getElementById('create-error').classList.remove('hidden');
    } finally {
      submitBtn?.removeAttribute('disabled');
    }
  });

  // Delete webhook
  async function deleteWebhook(id) {
    try {
      const res = await fetch(`${apiBaseUrl}/api/app/webhooks/${id}`, {
        method: 'DELETE',
        credentials: 'include',
      });

      if (!res.ok) {
        throw new Error('Kunne ikke slette webhook');
      }

      await loadWebhooks();
    } catch (err) {
      alert(err.message);
    }
  }

  // Initial load
  loadWebhooks();
</script>
