---
import AuthLayout from '../../layouts/AuthLayout.astro';
import GlassCard from '../../components/ui/GlassCard.astro';

const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.skyplanner.no';
---

<AuthLayout title="Registrering fullført">
  <GlassCard class="text-center">
    <div class="w-16 h-16 rounded-full bg-secondary-500/20 flex items-center justify-center mx-auto mb-6">
      <svg class="w-8 h-8 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
    </div>

    <h1 class="text-2xl font-bold text-white mb-2">Velkommen til Sky Planner!</h1>
    <p class="text-dark-400 mb-8">
      Din konto er opprettet. Du har nå 14 dagers gratis prøveperiode.
    </p>

    <div class="space-y-4">
      <a href={appUrl} class="btn-primary w-full">
        Gå til applikasjonen
      </a>
      <a href="/auth/login" class="btn-secondary w-full">
        Logg inn
      </a>
    </div>
  </GlassCard>
</AuthLayout>
