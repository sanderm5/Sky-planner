{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && pnpm install --no-frozen-lockfile && pnpm --filter @skyplanner/web build"
  },
  "deploy": {
    "startCommand": "sh -c \"HOST=0.0.0.0 node dist/server/entry.mjs\"",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
